<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TvFragment">

    <LinearLayout
        android:id="@+id/tvRootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/airingTodayTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airing Today"
                android:textSize="20sp"
                android:textColor="#0a37b3"
                android:padding="6dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/airingToday2TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="8dp"
                android:textColor="#0a37b3"
                android:onClick="seeAll"
                android:text="@string/see_all"/>

        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewAiringToday"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/onTheAirTitleTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="On The Air"
               android:textSize="20sp"
               android:textColor="#0a37b3"
               android:padding="6dp"
               android:layout_marginBottom="8dp"/>
           <TextView
               android:id="@+id/onTheAir2TextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="right"
               android:padding="8dp"
               android:textColor="#0a37b3"
               android:onClick="seeAll"
               android:text="@string/see_all"/>
       </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewOnTheAir"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popularTvTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popular"
                android:textSize="20sp"
                android:textColor="#0a37b3"
                android:padding="6dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/popular22TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="8dp"
                android:textColor="#0a37b3"
                android:onClick="seeAll"
                android:text="@string/see_all"/>


        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewPopularTv"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/topRatedTvTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Rated"
                android:textSize="20sp"
                android:textColor="#0a37b3"
                android:padding="6dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/topRated22TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="8dp"
                android:textColor="#0a37b3"
                android:onClick="seeAll"
                android:text="@string/see_all"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewTopRatedTv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>